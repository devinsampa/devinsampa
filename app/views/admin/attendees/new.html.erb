<h1>New attendee</h1>

<% form_for([:admin, @attendee]) do |f| %>
  <%= f.error_messages %>

  <p>
    <%= f.label :name %><br />
    <%= f.text_field :name %>
  </p>
  <p>
    <%= f.label :email %><br />
    <%= f.text_field :email %>
  </p>
  <p>
    <%= f.label :doc %><br />
    <%= f.text_field :doc %>
  </p>
  <p>
    <%= f.label :company %><br />
    <%= f.text_field :company %>
  </p>
  <p>
    <%= f.label :free %> <br />
    <%= f.check_box :free %>
  </p>
  
  <p>
    <%= f.submit 'Create' %>
  </p>
  
<% end %>

<%= link_to 'Back', admin_attendees_path %>
