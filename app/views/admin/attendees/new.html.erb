<h1>New attendee</h1>

<% form_for(@attendee) do |f| %>
  <%= f.error_messages %>

  <p>
    <%= f.label :name %><br />
    <%= f.text_field :name %>
  </p>
  <p>
    <%= f.label :email %><br />
    <%= f.text_field :email %>
  </p>
  <p>
    <%= f.label :doc %><br />
    <%= f.text_field :doc %>
  </p>
  <p>
    <%= f.label :company %><br />
    <%= f.text_field :company %>
  </p>
  <p>
    <%= f.label :status %><br />
    <%= f.text_field :status %>
  </p>
  <p>
    <%= f.label :payment_method %><br />
    <%= f.text_field :payment_method %>
  </p>
  <p>
    <%= f.label :processed_at %><br />
    <%= f.datetime_select :processed_at %>
  </p>
  <p>
    <%= f.label :buyer %><br />
    <%= f.text_area :buyer %>
  </p>
  <p>
    <%= f.submit 'Create' %>
  </p>
<% end %>

<%= link_to 'Back', attendees_path %>