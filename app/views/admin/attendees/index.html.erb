<h1>Listing attendees</h1>

<table border="1" cellspacing="0" cellpadding="3">
  <tr>
    <th><%= current_admin_attendee_order("Name") %></th>
    <th><%= current_admin_attendee_order("Email") %></th>
    <th><%= current_admin_attendee_order("Status") %></th>
    <th colspan="6">Change status</th>
    <th colspan="3">Actions</th>
    
  </tr>

<% @attendees.each do |attendee| %>
  <tr style="background-color: <%= cycle('#CCC', '#999') %>">
    <td><%=h attendee.name %></td>
    <td><%=h attendee.email %></td>
    <td><%=h attendee.status %></td>

    <td><%= link_to 'Completed', completed_admin_attendee_path(attendee), :method => :put %></td>
    <td><%= link_to 'Pending', pending_admin_attendee_path(attendee), :method => :put %></td>
    <td><%= link_to 'Approved', approved_admin_attendee_path(attendee), :method => :put %></td>
    <td><%= link_to 'Verifying', verifying_admin_attendee_path(attendee), :method => :put %></td>
    <td><%= link_to 'Canceled', canceled_admin_attendee_path(attendee), :method => :put %></td>
    <td><%= link_to 'Refunded', refunded_admin_attendee_path(attendee), :method => :put %></td>
    
    <td><%= link_to 'Resend', resend_admin_attendee_path(attendee) %></td>
    <td><%= link_to 'Edit', edit_admin_attendee_path(attendee) %></td>
    <td><%= link_to 'Destroy', admin_attendee_path(attendee), :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>
